{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "rootDir": "./src",
    "outDir": "./dist",
    "forceConsistentCasingInFileNames": true,

    // Node.js の型定義・モジュール解決を使う
    "moduleResolution": "node",
    "types": ["node"],
    "lib": ["ES2020", "DOM"]
  },
  "include": ["src", "rennsyuu.ts"]
}